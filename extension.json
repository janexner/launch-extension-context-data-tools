{
  "displayName": "Analytics contextData Tools",
  "name": "ags055-analytics-contextdata-variable-tools",
  "platform": "web",
  "version": "1.2.0",
  "description": "Provides Actions and Tools around Analytics contextData variables.",
  "author": {
    "name": "Adobe Consulting, Jan Exner",
    "email": "jexner@adobe.com"
  },
  "viewBasePath": "src/view/",
  "actions": [
    {
      "displayName": "Set Context Data Variables",
      "name": "set-context-data-variables",
      "schema": {
        "$schema": "http://json-schema.org/draft-04/schema#",
        "type": "object",
        "properties": {
          "namespace": {
            "type": "string"
          },
          "contextData": {
            "type": "object",
            "additionalProperties": { "type": "string" }
          }
        },
        "required": [
          "contextData"
        ],
        "additionalProperties": { "type": "string" }
      },
      "libPath": "src/lib/actions/setContextDataVariables.js",
      "viewPath": "actions/setContextDataVariables.html"
    },
    {
      "displayName": "Copy to Context Data Variables",
      "name": "copy-to-context-data-variables",
      "schema": {
        "$schema": "http://json-schema.org/draft-04/schema#",
        "type": "object",
        "properties": {
          "namespace": {
            "type": "string"
          },
          "page": {
            "type": "object",
            "properties": {
              "copy": { "type": "boolean" },
              "delete": { "type": "boolean" }
            },
            "required": [
              "copy",
              "delete"
            ]
          },
          "campaign": {
            "type": "object",
            "properties": {
              "copy": { "type": "boolean" },
              "delete": { "type": "boolean" }
            },
            "required": [
              "copy",
              "delete"
            ]
          },
          "eVars": {
            "type": "object",
            "properties": {
              "copy": { "type": "boolean" },
              "delete": { "type": "boolean" }
            },
            "required": [
              "copy",
              "delete"
            ]
          },
          "listVars": {
            "type": "object",
            "properties": {
              "copy": { "type": "boolean" },
              "delete": { "type": "boolean" }
            },
            "required": [
              "copy",
              "delete"
            ]
          },
          "builtInEvents": {
            "type": "object",
            "properties": {
              "copy": { "type": "boolean" },
              "delete": { "type": "boolean" }
            },
            "required": [
              "copy",
              "delete"
            ]
          },
          "events": {
            "type": "object",
            "properties": {
              "copy": { "type": "boolean" },
              "delete": { "type": "boolean" }
            },
            "required": [
              "copy",
              "delete"
            ]
          },
          "props": {
            "type": "object",
            "properties": {
              "copy": { "type": "boolean" },
              "delete": { "type": "boolean" }
            },
            "required": [
              "copy",
              "delete"
            ]
          },
          "hier": {
            "type": "object",
            "properties": {
              "copy": { "type": "boolean" },
              "delete": { "type": "boolean" }
            },
            "required": [
              "copy",
              "delete"
            ]
          },
          "mappings": {
            "type": "object",
            "additionalProperties": { 
              "type": "string"
            }
          }
        },
        "required": [
          "page",
          "campaign",
          "eVars",
          "listVars",
          "builtInEvents",
          "events",
          "props",
          "hier",
          "mappings"
        ],
        "additionalProperties": { "type": "string" }
      },
      "libPath": "src/lib/actions/copyToContextDataVariables.js",
      "viewPath": "actions/copyToContextDataVariables.html"
    },
    {
      "displayName": "Set Context Data from DataLayer",
      "name": "set-context-data-from-data-layer",
      "schema": {
        "$schema": "http://json-schema.org/draft-04/schema#",
        "type": "object",
        "properties": {
          "namespace": {
            "type": "string"
          },
          "dataLayerRoot": {
            "type": "string"
          },
          "joinCharacter": {
            "type": "string",
            "maxLength": 1
          }
        },
        "required": [
          "dataLayerRoot",
          "joinCharacter"
        ],
        "additionalProperties": { "type": "string" }
      },
      "libPath": "src/lib/actions/setContextDataFromDataLayer.js",
      "viewPath": "actions/setContextDataFromDataLayer.html"
    }
  ],
  "iconPath": "resources/icons/logo.svg"
}
